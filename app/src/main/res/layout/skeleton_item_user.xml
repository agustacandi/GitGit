<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/doubled_dimen">

    <View
        android:id="@+id/item_user_skeleton_rounded"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_skeleton"
        android:contentDescription="@string/skeleton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_user_skeleton_square"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/default_dimen"
        android:background="@drawable/rounded_skeleton"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@id/item_user_skeleton_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="@dimen/default_dimen"
        android:background="@drawable/rounded_skeleton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_user_skeleton_rounded"
        app:layout_constraintTop_toBottomOf="@+id/item_user_skeleton_square"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>